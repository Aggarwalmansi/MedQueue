// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Users: The central identity table
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(PATIENT)
  fullName  String
  phone     String?
  googleId  String?  @unique
  
  // Relations
  hospitalId Int?  
  hospital  Hospital? // If user is a hospital manager
  bookings  Booking[] // If user is a patient
  ratings   Rating[]  // User ratings
  refreshTokens RefreshToken[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Hospitals: The core resource entity
model Hospital {
  id            Int      @id @default(autoincrement())
  name          String
  address       String
  city          String
  latitude      Float    // Crucial for distance calc
  longitude     Float    // Crucial for distance calc
  phone         String
  isVerified    Boolean  @default(false) // Admin approval flag
  
  // Live Inventory (The most frequently updated fields)
  bedsGeneral   Int      @default(0)
  bedsICU       Int      @default(0)
  bedsOxygen    Int      @default(0)
  doctorsActive Int      @default(0)

  // ER Wait Times (JSON structure)
  erWaitTimes   Json?    // { critical: { avgWaitMinutes: 10, ... }, ... }

  // Hospital Facilities & Specialization
  specializations  Json?  // Array of departments with specialists, equipment, beds
  diagnostics      Json?  // MRI, CT, X-Ray, Ultrasound availability and specs
  criticalCare     Json?  // Ventilators, dialysis, blood bank, ICU types
  supportServices  Json?  // Pharmacy, cafeteria, parking, WiFi, etc.
  accreditations   Json?  // NABH, NABL, JCI certifications with validity
  profileCompleteness Int @default(0)  // 0-100 calculated score
  
  // Relations
  managerId     Int      @unique
  manager       User     @relation(fields: [managerId], references: [id])
  bookings      Booking[]
  ratings       Rating[]
  virtualQueue  VirtualQueueEntry[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// 5. Virtual Queue: For ER waiting list
model VirtualQueueEntry {
  id            Int      @id @default(autoincrement())
  hospitalId    Int
  hospital      Hospital @relation(fields: [hospitalId], references: [id])
  
  patientName   String
  severity      Severity
  checkInTime   DateTime @default(now())
  status        QueueStatus @default(WAITING)
  
  // Optional: Link to registered user if logged in
  userId        Int?
  
  updatedAt     DateTime @updatedAt
}

enum QueueStatus {
  WAITING
  CALLED
  COMPLETED
  EXPIRED
  CANCELLED
}

// 3. Bookings: The transactional link between Patient and Hospital
model Booking {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  
  // Patient Info
  patientName String
  patientPhone String?  // Added for guest bookings
  condition   String   // e.g., "Chest Pain"
  severity    Severity @default(MODERATE)
  
  // Status Flow
  status      Status   @default(INCOMING)
  
  // New Fields for Unified Bookings
  source          BookingSource @default(TRIAGE)
  appointmentTime DateTime?
  
  // Relations
  userId      Int?     // Made optional for guest bookings
  user        User?    @relation(fields: [userId], references: [id])
  hospitalId  Int
  hospital    Hospital @relation(fields: [hospitalId], references: [id])
}

enum BookingSource {
  TRIAGE
  CALENDAR
  WALK_IN
}

// 4. Ratings: User feedback for hospitals
model Rating {
  id         Int      @id @default(autoincrement())
  value      Int      // 1-5
  comment    String?
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  hospitalId Int
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, hospitalId]) // One rating per user per hospital
}

// Enums for strict typing
enum Role {
  PATIENT
  HOSPITAL
  ADMIN
}

enum Status {
  INCOMING  // Patient is on the way (Triage)
  ADMITTED  // Patient arrived and accepted
  DIVERTED  // Hospital sent patient elsewhere
  CANCELLED // Patient cancelled
  SCHEDULED // Future appointment (Calendar)
  COMPLETED // Appointment finished
  NO_SHOW   // Patient didn't show up
}

enum Severity {
  LOW
  MODERATE
  CRITICAL
}

model RefreshToken {
  id          Int      @id @default(autoincrement())
  token       String   @unique
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  revoked     Boolean  @default(false)
}
